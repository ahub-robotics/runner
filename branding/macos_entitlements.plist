<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Permitir conexiones de red salientes -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Permitir conexiones de red entrantes (para el servidor Flask) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Permitir ejecuci贸n de c贸digo sin firma (para plugins/extensiones) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Permitir carga de bibliotecas sin firma -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- JIT compilation (para Python) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Acceso a archivos seleccionados por el usuario -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Acceso al directorio home del usuario -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Deshabilitar App Sandbox (necesario para funcionalidad completa) -->
    <!-- NOTA: Esto requiere notarizaci贸n, no puede usarse en Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Permitir automatizaci贸n de otras apps (para Robot Framework) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Acceso a dispositivos USB (si se necesita) -->
    <key>com.apple.security.device.usb</key>
    <true/>

    <!-- Acceso a Bluetooth (si se necesita) -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>

    <!-- Hardened Runtime -->
    <key>com.apple.security.get-task-allow</key>
    <false/>
</dict>
</plist>